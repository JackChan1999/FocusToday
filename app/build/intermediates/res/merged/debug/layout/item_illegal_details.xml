<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <TextView
            android:id="@+id/illegal_details_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_dark_gray"
            android:textSize="@dimen/radio_text_size" />

        <TextView
            android:id="@+id/illegal_details_process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="220dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/red"
            android:textSize="@dimen/radio_text_size" />

        <ImageView
            android:id="@+id/illegal_details_sign"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/illegal_details_time"
            android:contentDescription="@null"
            android:src="@mipmap/unprocessed" />

        <View
            android:id="@+id/view1"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_below="@+id/illegal_details_time"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/frame_gray" />

        <TextView
            android:id="@+id/illegal_details_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/title" />

        <TextView
            android:id="@+id/illegal_details_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/illegal_details_place"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/text_dark_gray"
            android:textSize="@dimen/radio_text_size" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_below="@+id/illegal_details_reason"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:contentDescription="@null"
            android:src="@mipmap/point" />

        <TextView
            android:id="@+id/illegal_details_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/illegal_details_reason"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_dark_gray"
            android:textSize="@dimen/radio_text_size" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_below="@+id/illegal_details_reason"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="6dp"
            android:contentDescription="@null"
            android:src="@mipmap/money" />

        <TextView
            android:id="@+id/illegal_details_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/illegal_details_reason"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_dark_gray"
            android:textSize="@dimen/radio_text_size" />
    </RelativeLayout>

</LinearLayout>