<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        >
        <TextView 
            android:id="@+id/air_line_query_start_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="07:00"
            android:layout_weight="0.7"
            android:layout_marginLeft="30dp"
            android:textColor="@color/black"
            android:textSize="@dimen/radio_text_size"/>
        <TextView 
            android:id="@+id/air_line_query_start_place"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="虹桥机场"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="@dimen/radio_text_size"
            />
        <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="飞机餐："
            android:layout_weight="0.7"
            android:textColor="@color/black"
            android:textSize="@dimen/a_text_size"
            />
        <TextView 
            android:id="@+id/air_line_query_plane_meal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="有"
            android:layout_weight="0.3"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:textSize="@dimen/a_text_size"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        >
        <TextView 
            android:id="@+id/air_line_query_end_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="09:00"
            android:layout_weight="0.7"
            android:layout_marginLeft="30dp"
            android:textColor="@color/black"
            android:textSize="@dimen/radio_text_size"/>
        <TextView 
            android:id="@+id/air_line_query_end_place"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="首都机场"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="@dimen/radio_text_size"
            />
        <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            />
        <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:layout_marginRight="20dp"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >
        <TextView 
            android:id="@+id/air_line_query_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="南航"
            android:layout_marginLeft="30dp"
            android:textColor="@color/frame_gray"
            android:textSize="@dimen/b_text_size"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="("
            android:textColor="@color/frame_gray"
            android:textSize="@dimen/b_text_size"/>
        <TextView 
            android:id="@+id/air_line_query_plane_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MU5137"
            android:textColor="@color/frame_gray"
            android:textSize="@dimen/b_text_size"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=")"
            android:textColor="@color/frame_gray"
            android:textSize="@dimen/b_text_size"/>
    </LinearLayout>
    

</LinearLayout>
