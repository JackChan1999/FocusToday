<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/hospital_username"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:singleLine="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_frame"
            android:hint="@string/hide_hospital_username"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:textColorHint="@color/frame_gray"
            android:textSize="@dimen/t_text_size" />
        
        <EditText
            android:id="@+id/hosptial_password"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:password="true"
            android:singleLine="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_frame"
            android:hint="@string/hide_hospital_password"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:textColorHint="@color/frame_gray"
            android:textSize="@dimen/t_text_size" />
        
        <EditText
            android:id="@+id/hosptial_description"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:singleLine="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_frame"
            android:hint="@string/hide_ill_description"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:textColorHint="@color/frame_gray"
            android:textSize="@dimen/t_text_size" />

        <Button
            android:id="@+id/hosptial_login"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/button_ok_bg"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:text="@string/button_hospital_login"
            android:textColor="@color/white"
            android:textSize="@dimen/button_text_size" />
    </LinearLayout>

</LinearLayout>