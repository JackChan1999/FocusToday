<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/train_stay_station_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="南京南"
            android:textColor="@color/text_gray_3"
            android:textSize="@dimen/prompt_text_size" />

        <TextView
            android:id="@+id/train_arrived_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="09:00"
            android:textColor="@color/text_gray_3"
            android:textSize="@dimen/prompt_text_size" />

        <TextView
            android:id="@+id/train_leave_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="09:05"
            android:textColor="@color/text_gray_3"
            android:textSize="@dimen/prompt_text_size" />

        <TextView
            android:id="@+id/train_stay_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="5分钟"
            android:textColor="@color/text_gray_3"
            android:textSize="@dimen/prompt_text_size" />
    </LinearLayout>

</LinearLayout>