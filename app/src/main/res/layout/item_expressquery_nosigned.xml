<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="13dp"
    android:layout_marginRight="13dp"
    android:background="@color/white"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.15"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="8dp" >

            <ImageView
                android:id="@+id/express_line_one"
                android:layout_width="2dp"
                android:layout_height="8dp"
                android:layout_marginLeft="18dp"
                android:background="@mipmap/expressquery_line" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="13dp"
                android:src="@mipmap/expressquery_circle" />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:orientation="vertical">

            <ImageView
                android:id="@+id/express_line_three"
                android:layout_width="2dp"
                android:layout_height="20dp"
                android:layout_marginLeft="18dp"
                android:background="@mipmap/expressquery_line" />
            <ImageView
                
                android:layout_width="2dp"
                android:layout_height="20dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="4dp"
                android:background="@mipmap/expressquery_dashline" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/express_time_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textColor="@color/text_light_black"
            android:textSize="@dimen/radio_text_size" />

        <TextView
            android:id="@+id/express_state_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/radio_text_size" />

        <TextView
            android:id="@+id/express_place_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/radio_text_size" />
    </LinearLayout>

</LinearLayout>